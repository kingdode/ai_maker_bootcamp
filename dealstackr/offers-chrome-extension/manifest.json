{
  "manifest_version": 3,
  "name": "DealStackr",
  "version": "1.3.1",
  "description": "Scan and stack credit card offers from Chase and American Express with cashback portal and signup offer detection",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.chase.com/*",
        "https://*.americanexpress.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["affiliateDetector.js", "signupDetector.js"],
      "run_at": "document_idle",
      "exclude_matches": [
        "https://*.chase.com/*",
        "https://*.americanexpress.com/*",
        "https://*.google.com/*",
        "https://*.bing.com/*",
        "https://*.facebook.com/*",
        "https://*.twitter.com/*",
        "https://*.youtube.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dashboard.html", 
        "dashboard.css", 
        "dashboard.js", 
        "affiliateData.js",
        "merchantDashboard.html",
        "merchantDashboard.css",
        "merchantDashboard.js",
        "merchantData.js"
      ],
      "matches": ["chrome-extension://*/*"]
    }
  ]
}

